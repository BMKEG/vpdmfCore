<ViewDefinition Name="cites" altName="isCitedIn" Type="Link">
	<Primitives>
		<PrimitiveDefinition Name="cites" primaryFlag="TRUE">
			<Classes>
				<Class Name="ViewLinkTable" primaryFlag="TRUE"/>
			</Classes>
			<triplets>
				<triplet>
					ViewLinkTable->from=FromView|ViewTable
				</triplet>
				<triplet>
					ViewLinkTable->to=ToView|ViewTable
				</triplet>
			</triplets>
			<Conditions>
				<Condition>
					|ViewLinkTable.linkType='cites'
				</Condition>
			</Conditions>
			<FormDesign>
				<Control Type="Lookup" Pos="1" Label="Citing Fragment" lookupView="FromView" attributeAddress="]FromView|ViewTable.indexString"/>
				<Control Type="Lookup" Pos="2" Label="Cited Article" lookupView="ToView" attributeAddress="]ToView|ViewTable.indexString"/>
			</FormDesign>
		</PrimitiveDefinition>
		<PrimitiveDefinition Name="FromView" Editable="0" lookupView="BibliographicFragmentLU">
			<Conditions>
				<Condition>
					|ViewTable.viewType='.KnowledgeStatement.%Fragment.%BibliographicFragment.%'
				</Condition>
			</Conditions>
		</PrimitiveDefinition>
		<PrimitiveDefinition Name="ToView" Editable="0" lookupView="ResourceLU"/>
	</Primitives>
	<Links>
		<Link Name="FrgToRef" setRelation="Overlap">[BibliographicFragment]BibliographicFragment|ViewTable=[cites]FromView|ViewTable</Link>
		<Link Name="RefToArt" setRelation="Overlap">[cites]ToView|ViewTable=[Publication]Resource|ViewTable</Link>
	</Links>
	<IndexElements>
		<IndexElement Pos="1" attributeAddress="]FromView|ViewTable.indexString"/>
		<IndexElement Pos="2" attributeAddress="]ToView|ViewTable.indexString"/>
		<IndexElement Pos="3" attributeAddress="]FromView|ViewTable.ViewTable_id"/>
		<IndexElement Pos="4" attributeAddress="]ToView|ViewTable.ViewTable_id"/>
	</IndexElements>
	<Index Format="$1$ >>> cites >>> $2$"/>
	<MachineIndex Format="ViewTable_id=$3$ >>> cites >>> ViewTable_id=$4$"/>
</ViewDefinition>

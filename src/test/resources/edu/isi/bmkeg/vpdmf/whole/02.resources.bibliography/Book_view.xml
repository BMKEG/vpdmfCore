<ViewDefinition Name="Book" Type="Data" >
	<Primitives>
		<PrimitiveDefinition Name="Resource" primaryFlag="TRUE">
			<Classes>
				<Class Name="Resource" primaryFlag="TRUE"/>
				<Class Name="Book"/>
			</Classes>
			<triplets>
				<triplet>
					Resource->authorList=Scientist|Person
				</triplet>
				<triplet>
					Resource->id=ID|ID
				</triplet>
				<triplet>
					Resource->keyword=Keyword|Keyword
				</triplet>
				<triplet>
					Resource->resourceType=ResourceType|CV
				</triplet>
                                <triplet>
					Resource->fullTextURL=URI|URI
				</triplet>
			</triplets>
			<FormDesign>
				<GridArray Pos="1" Label="Author" attributeAddress="]Scientist">
					<Control Type="TextInput" Pos="1.1" Label="Initials" Size="10" attributeAddress="]Scientist|Person.Initials"/>
					<Control Type="TextInput" Pos="1.2" Label="Surname" Size="10" attributeAddress="]Scientist|Person.LastName"/>
				</GridArray>
				<Control Type="Label" Pos="2" Label="Year" Format="yyyy" Size="5" attributeAddress="]Resource|Resource.PubYear"/>
				<Control Type="TextRegion" Pos="3" Label="Title" Height="3" Width="40" attributeAddress="]Resource|Resource.Title"/>
				<Control Type="TextInput" Pos="4" Label="Pages" Size="8" attributeAddress="]Resource|Resource.Pages"/>
				<Control Type="TextRegion" Pos="5" Label="Abstract" Height="10" Width="40" attributeAddress="]Resource|Resource.Abstract"/>
				<Control Type="TextInput" Pos="6" Label="Unique Id" Size="10" attributeAddress="]Resource|Resource.uid"/>
				<GridArray Pos="7" Label="ID values" attributeAddress="]ID">
					<Control Type="TextInput" Pos="7.1" Size="20" attributeAddress="]ID|ID.id"/>
				</GridArray>
                                <GridArray Pos="8" Label="Full Text URL" attributeAddress="]URI">
					<Control Type="URLInput" Pos="8.1" Label="URL" Size="20" attributeAddress="]URI|URI.uri"/>
				</GridArray>
				<GridArray Pos="9" Label="Keywords" attributeAddress="]Keyword">
					<Control Type="TextInput" Pos="9.1" Size="20" attributeAddress="]Keyword|Keyword.value"/>
				</GridArray>
			</FormDesign>
		</PrimitiveDefinition>
		<PrimitiveDefinition Name="ID" Nullable="1">
			<Classes>
				<Class Name="ID" primaryFlag="TRUE"/>
			</Classes>
		</PrimitiveDefinition>
                <PrimitiveDefinition Name="URI" Editable="1" Nullable="1">
			<Classes>
				<Class Name="URI" primaryFlag="TRUE"/>
			</Classes>
		</PrimitiveDefinition>
		<PrimitiveDefinition lookupView="Scientist"/>
		<PrimitiveDefinition Name="Keyword" Nullable="1">
			<Classes>
				<Class Name="Keyword" primaryFlag="TRUE"/>
			</Classes>
		</PrimitiveDefinition>
		<PrimitiveDefinition Editable="0" Nullable="1" lookupView="ResourceType">
			<Conditions>
                        	<Condition>|CV.context='Resource.ResourceType'</Condition>
				<Condition>|CV.name='Bibliographic'</Condition>
			</Conditions>
		</PrimitiveDefinition>
	</Primitives>
	<Index Format="@1@ ($2$), `$3$` $4$, $5$, $6$"/>
        <MachineIndex Format="$1$$2$-$7$"/>
	<IndexElements>
		<IndexElement Pos="1" attributeAddress="]Scientist|Person.LastName"/>
		<IndexElement Pos="2" attributeAddress="]Resource|Resource.PubYear"/>
		<IndexElement Pos="3" attributeAddress="]Resource|Resource.Title"/>
		<IndexElement Pos="4" attributeAddress="]Resource|Book.publisher"/>
		<IndexElement Pos="5" attributeAddress="]Resource|Book.city"/>
		<IndexElement Pos="6" attributeAddress="]Resource|Book.edition"/>
		<IndexElement Pos="7" attributeAddress="]Resource|Resource.uid"/>
	</IndexElements>
        <Parent Name="Publication"/>
</ViewDefinition>

<ViewDefinition Name="AtlasVolume" Type="External">
	<Primitives>
		<PrimitiveDefinition Name="AtlasVolume" primaryFlag="TRUE">
			<Classes>
				<Class Name="AtlasVolume" primaryFlag="TRUE"/>
			</Classes>
			<triplets>
				<triplet>
					AtlasVolume->atlas=AtlasLU|Atlas
				</triplet>
			</triplets>
			<FormDesign>
				<Control Type="TextInput" Pos="1" Label="Name" Size="40" attributeAddress="]AtlasVolume|AtlasVolume.name"/>
				<Control Type="TextInput" Pos="2" Label="Abbreviation" Size="40" attributeAddress="]AtlasVolume|AtlasVolume.abbreviation"/>
				<Control Type="TextInput" Pos="3" Label="Address" Size="40" attributeAddress="]AtlasVolume|AtlasVolume.address"/>
				<Control Type="TextRegion" Pos="4" Label="Description" Height="20" Width="40" attributeAddress="]AtlasVolume|AtlasVolume.description"/>
				<Control Type="Lookup" Pos="5" Label="Atlas" lookupView="AtlasLU" attributeAddress="]Atlas|ViewTable.indexString"/>
			</FormDesign>
		</PrimitiveDefinition>
		<PrimitiveDefinition Editable="0" lookupView="AtlasLU"/>
	</Primitives>
	<Links>
		<Link Name="Atlas" setRelation="Overlap">[AtlasVolume]Atlas|Atlas=[Atlas]Atlas|Atlas</Link>
	</Links>
	<Index Format="tidy[$1$ ]$2$ : $3$"/>
	<MachineIndex Format="$1$$4$"/>
	<IndexElements>
		<IndexElement Pos="1" attributeAddress="]AtlasLU|Atlas.name"/>
		<IndexElement Pos="2" attributeAddress="]AtlasVolume|AtlasVolume.abbreviation"/>
		<IndexElement Pos="3" attributeAddress="]AtlasVolume|AtlasVolume.name"/>
		<IndexElement Pos="4" attributeAddress="]AtlasVolume|AtlasVolume.address"/>
	</IndexElements>
        <Parent Name="BrainVolume"/>
</ViewDefinition>
